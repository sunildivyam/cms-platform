{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@cms/shared": ["../packages/shared/dist"],
      "@cms/shared/*": ["../packages/shared/dist/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
